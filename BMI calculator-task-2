import tkinter as tk

def CALCULATE_BODY_MASS_INDEX():
    HEIGHT_VALUE = float(height_entry.get()) / 100  
    WEIGHT_VALUE = float(weight_entry.get())
    BMI_VALUE = WEIGHT_VALUE / (HEIGHT_VALUE ** 2)
    result_label.config(text=f"Your BMI is: {BMI_VALUE:.2f}")
    category = DETERMINE_BMI_CATEGORY(BMI_VALUE)
    category_label.config(text=f"You are categorized as: {category}")

def DETERMINE_BMI_CATEGORY(BMI_VALUE):
    if BMI_VALUE < 18.5:
        return "Underweight"
    elif 18.5 <= BMI_VALUE < 25:
        return "Normal weight"
    else:
        return "Overweight"

root = tk.Tk()
root.title("BMI Calculator")

frame = tk.Frame(root)
frame.pack(padx=20, pady=20)

height_label = tk.Label(frame, text="Enter your height (in cm):")
height_label.grid(row=0, column=0, padx=10, pady=5)

height_entry = tk.Entry(frame)
height_entry.grid(row=0, column=1, padx=10, pady=5)

weight_label = tk.Label(frame, text="Enter your weight (in kg):")
weight_label.grid(row=1, column=0, padx=10, pady=5)

weight_entry = tk.Entry(frame)
weight_entry.grid(row=1, column=1, padx=10, pady=5)

calculate_button = tk.Button(frame, text="Calculate BMI", command=CALCULATE_BODY_MASS_INDEX)
calculate_button.grid(row=2, columnspan=2, padx=10, pady=10)

result_label = tk.Label(frame, text="")
result_label.grid(row=3, columnspan=2, padx=10, pady=5)

category_label = tk.Label(frame, text="")
category_label.grid(row=4, columnspan=2, padx=10, pady=5)

root.mainloop()
